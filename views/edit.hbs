<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <h3 class="text-center mt-3">請輸入你的支出</h3>
      <form action="/records/{{record._id}}/edit?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">名稱</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="{{record.name}}">
        </div>
        <div class="mb-3">
          <label for="date" class="mb-2">日期</label>
          <input type="date" id="date" name="date" class="form-control" placeholder="Enter Date"
            value="{{record.date}}">
        </div>
        <div class="mb-3">
          <label for="category" class="mb-2">類別</label>
          <select name="category" id="category" name="category" class="form-control">
            <option disabled selected>Select</option>
            <option>家居物業</option>
            <option>交通出行</option>
            <option>休閒娛樂</option>
            <option>餐飲食品</option>
            <option>其他</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="amount" class="mb-2">金額</label>
          <input type="number" id="amount" name="amount" class="form-control" placeholder="Enter Amount"
            value="{{record.amount}}">
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="submit" class="btn btn-primary btn-block">編輯儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>