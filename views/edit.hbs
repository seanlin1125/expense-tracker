<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <h3 class="text-center mt-3">請輸入你的支出</h3>
      <form action="/records/{{record._id}}?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">名稱<span class="text-danger">*</span></label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="{{record.name}}" required>
        </div>
        <div class="mb-3">
          <label for="date" class="mb-2">日期<span class="text-danger">*</span></label>
          <input type="date" id="date" name="date" class="form-control" placeholder="Enter Date"
            value="{{record.date}}" required>
        </div>
        <div class="mb-3">
          <label for="category" class="mb-2">類別<span class="text-danger">*</span></label>
          <select name="category" id="category" name="category" class="form-control">
            {{!-- <option disabled selected>Select</option> --}}
            {{#each categories}}
            <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="amount" class="mb-2">金額<span class="text-danger">*</span></label>
          <input type="number" id="amount" name="amount" class="form-control" placeholder="Enter Amount"
            value="{{record.amount}}" required>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="submit" class="btn btn-primary btn-block">編輯儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>